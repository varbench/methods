include ../make.sys

PFAPACK = ../pfapack/libpfapack.a
SFMT = ../sfmt/SFMT.o
STDFACE = ../StdFace/libStdFace.a
OPTION = -D_mpi_use

OBJS = \
	physcal_lanczos.o \
	splitloop.o \
	vmcmain.o \
	$(PFAPACK) $(SFMT) $(STDFACE)

SOURCES = \
average.c \
avevar.c \
calgrn.c \
calgrn_fsz.c \
calham.c \
calham_real.c \
calham_fsz.c \
gauleg.c \
initfile.c \
legendrepoly.c \
locgrn.c \
locgrn_real.c \
locgrn_fsz.c \
lslocgrn.c \
lslocgrn_real.c \
matrix.c \
parameter.c \
pfupdate.c \
pfupdate_fsz.c \
pfupdate_real.c \
pfupdate_two_fcmp.c \
pfupdate_two_fsz.c \
pfupdate_two_real.c \
projection.c \
qp.c \
qp_real.c \
readdef.c \
safempi.c \
safempi_fcmp.c \
setmemory.c \
slater.c \
slater_fsz.c \
splitloop.c \
stcopt_dposv.c \
stcopt_pdposv.c \
stcopt_cg.c \
vmccal.c \
vmccal_fsz.c \
vmcdry.c \
vmcmain.c \
vmcclock.c \
vmcmake.c \
vmcmake_fsz.c \
vmcmake_real.c \
workspace.c

HEADERS = \
./include/average.h \
./include/avevar.h \
./include/calgrn.h \
./include/calham.h \
./include/calham_real.h \
./include/gauleg.h \
./include/global.h \
./include/initfile.h \
./include/legendrepoly.h \
./include/locgrn.h \
./include/locgrn_real.h \
./include/lslocgrn.h \
./include/lslocgrn_real.h \
./include/matrix.h \
./include/parameter.h \
./include/pfupdate.h \
./include/pfupdate_real.h \
./include/pfupdate_two_fcmp.h \
./include/pfupdate_two_real.h \
./include/physcal_lanczos.h \
./include/projection.h \
./include/qp.h \
./include/qp_real.h \
./include/readdef.h \
./include/setmemory.h \
./include/slater.h \
./include/splitloop.h \
./include/stcopt_dposv.h \
./include/stcopt_pdposv.h \
./include/version.h \
./include/vmccal.h \
./include/vmcmain.h \
./include/vmcmake.h \
./include/vmcmake_real.h \
./include/workspace.h

all : 
	cd ../pfapack; $(MAKE) -f makefile_pfapack
	cd ../sfmt; $(MAKE) -f makefile_sfmt
	cd ../StdFace; $(MAKE) -f makefile_StdFace libStdFace.a
	make -f makefile_src vmc.out
	make -f makefile_src vmcdry.out
	cd ../ComplexUHF; $(MAKE) -f makefile_uhf

vmc.out : $(OBJS)
	$(CC) -o $@ $(OBJS) $(OPTION) $(CFLAGS) $(LIBS)

vmcdry.out : vmcdry.o $(STDFACE)
	$(CC) -o $@ $^ $(OPTION) $(CFLAGS) $(LIBS)

SUFFIXES: .o .c

.c.o:
	$(CC) $(OPTION) $(CFLAGS) -I ./include -c $<

clean :
	rm -f *.o vmc.out vmcdry.out
	cd ../sfmt; $(MAKE) -f makefile_sfmt clean
	cd ../pfapack; $(MAKE) -f makefile_pfapack clean
	cd ../StdFace; $(MAKE) -f makefile_StdFace clean
	cd ../ComplexUHF; $(MAKE) -f makefile_uhf clean

physcal_lanczos.o:$(SOURCES) $(HEADERS)
splitloop.o:$(SOURCES) $(HEADERS)
vmcdry.o:$(SOURCES) $(HEADERS)
vmcmain.o:$(SOURCES) $(HEADERS)
